<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.woolr.fowitgenie.PlayActivity"
    android:background="@drawable/question_poser">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Texte de la question"
        android:id="@+id/text_question"
        android:padding="20px"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@drawable/dialog_box"
        android:layout_marginTop="500px"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="300px"
        android:layout_height="200px"
        android:text="Oui"
        android:id="@+id/button_oui"
        android:layout_alignParentBottom="true"
        android:background="@drawable/lampe_boutton"
        android:textStyle="bold"
        android:paddingTop="20px"
        android:onClick="pressYess"
        android:textColor="#000000"
        android:textSize="35px" />

    <Button
        android:layout_width="300px"
        android:layout_height="200px"
        android:text="Non"
        android:id="@+id/button_non"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/lampe_boutton"
        android:textStyle="bold"
        android:paddingTop="20px"
        android:onClick="pressNo"
        android:textSize="35px" />

</RelativeLayout>
