<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.woolr.fowitgenie.QuestionLearnActivity"
    tools:showIn="@layout/activity_question_learn"
    android:background="@drawable/fin">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Question :"
        android:ems="10"
        android:id="@+id/editTextQuestion"
        android:layout_above="@+id/textViewQuestionLearn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#b6f7f7f7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rentrer une nouvelle question pour amÃ©liorier le jeu. (Cliquez sur &quot;Question&quot;)"
        android:id="@+id/textViewQuestionLearn"
        android:allowUndo="true"
        android:padding="20px"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@drawable/dialog_box"
        android:textSize="45px"
        android:autoText="false"
        android:layout_above="@+id/button_yes_question_lear"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300px"
        android:layout_height="200px"
        android:text="Oui"
        android:id="@+id/button_yes_question_lear"
        android:background="@drawable/lampe_boutton"
        android:textStyle="bold"
        android:paddingTop="20px"
        android:onClick="ajoutQuestionYes"
        android:textColor="#000000"
        android:textSize="35px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp" />

    <Button
        android:layout_width="300px"
        android:layout_height="200px"
        android:text="Non"
        android:id="@+id/button_no_question_lear"
        android:background="@drawable/lampe_boutton"
        android:textStyle="bold"
        android:paddingTop="20px"
        android:onClick="ajoutQuestionNo"
        android:textSize="35px"
        android:layout_below="@+id/textViewQuestionLearn"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
